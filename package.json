{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Real-time chat application",
  "main": "index.js",
  "scripts": {
    "build": "npm install --prefix backend && npm install --prefix frontend && npm run build --prefix frontend",
    "start": "concurrently \"npm run dev --prefix frontend\" \"npm run dev --prefix backend\"",
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "backend": "npm start --prefix backend"
  },
  "keywords": [
    "chat",
    "socket.io",
    "mern"
  ],
  "author": "Rachit Kothadia",
  "license": "ISC",
  "dependencies": {
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "mongoose": "^7.8.3",
    "multer": "^1.4.5-lts.1",
    "react-hot-toast": "^2.5.1",
    "react-router-dom": "^7.1.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.7"
  }
}
